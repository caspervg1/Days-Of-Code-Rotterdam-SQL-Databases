SELECT * FROM user_accounts 

SELECT [COLUMN NAME(S)] FROM [TABLE NAME(s)]
WHERE [COLUMN NAME] = [CONDITION]

SELECT registration_date FROM user_accounts
WHERE email = 'casper.van.gent@gmail.com'

SELECT [COLUMN NAME(S)] FROM [TABLE NAME(s)]
WHERE [COLUMN NAME] = [CONDITION]
  AND [COLUMN NAME] = [CONDITION]
  AND [COLUMN NAME] = [CONDITION]


UPDATE [TABLE NAME] SET [COLUMN NAME]=[VALUE]
WHERE [CONDITION (X=Y)]

DELETE FROM [TABLE NAME] WHERE [CONDITION (X=Y)]
