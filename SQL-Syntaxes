CREATE TABLE user_accounts 
  (
    id INT PRIMARY KEY NOT NULL, --this is the user id 
    email VARCHAR(256), -- this is the users email address
    registration_date DATE -- registration DATE
  );

INSERT INTO user_accounts VALUES
